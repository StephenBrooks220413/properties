<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') %>
<body>
<%- include('layouts/navBar') %>

<div class="apartments-bg"></div>

<div class="container mt-5 mb-5 p-3">
    <h1 class="display-4 mb-5">Apartments for Rent</h1>
    <div class="row text-center">
        <% for(var i = 0; i < apartments.length; i++){ %> 
        <div class="col-md-3 col-sm-12 hover-zoom">
            <a href="/apartment/<%= apartments[i]._id %>">
                <img src="<%= apartments[i].image %>" class="img-fluid" alt="<%= apartments[i].title %>">
            </a>
            <p>
                <%= apartments[i].contact %>
            </p>
        </div>
        <% } %>
    </div>

</div>

<%- include('layouts/footer') %>
</body>
<%- include('layouts/scripts') %>
</html>